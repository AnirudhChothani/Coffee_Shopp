@model OrderModel

@{
    
    string title = Model?.OrderID == null ? "Insert Product" : "Update Product";
    ViewData["Title"] = title;
    string buttonLabel = Model?.OrderID == null ? "Insert" : "Update";
}
<h2 class="mt-3 mb-3">@ViewData["Title"]</h2>
<form method="post" asp-action="OrderSave" class="row g-3">
    <input type="hidden" asp-for="OrderID" />
    <div class="mb-3">
        <label class="form-label">Order Date<span class="text-danger">*</span></label>
        <input type="date" asp-for="OrderDate" class="form-control" placeholder="Product Name">
        <span asp-validation-for="OrderDate" class="text-danger"></span>

    </div>
    <div class="mb-3">
        <label class="form-label">Customer Name<span class="text-danger">*</span></label>
        <input type="text" asp-for="CustomerName" class="form-control" placeholder="Product Price">
        <span asp-validation-for="CustomerName" class="text-danger"></span>

    </div>
    <div class="mb-3">
        <label class="form-label">Payment Mode<span class="text-danger">*</span></label>
        <input type="text" asp-for="PaymentMode" class="form-control" placeholder="Product Code">
        <span asp-validation-for="PaymentMode" class="text-danger"></span>

    </div>
    <div class="mb-3">
        <label class="form-label">Total Amount<span class="text-danger">*</span></label>
        <input type="text" asp-for="TotalAmount" class="form-control" placeholder="Description">
        <span asp-validation-for="TotalAmount" class="text-danger"></span>

    </div>
    <div class="mb-3">
        <label class="form-label">Shipping Address<span class="text-danger">*</span></label>
        <input type="text" asp-for="ShippingAddress" class="form-control" placeholder="Description">
        <span asp-validation-for="ShippingAddress" class="text-danger"></span>

    </div>
    <div class="mb-3">
        <label for="userID" class="form-label">User<span class="text-danger">*</span></label>
        <select asp-for="UserID" class="form-control" id="userID" asp-items="@(new SelectList(@ViewBag.User,"UserID","UserName"))">
            <option disabled="disabled" selected>-- Select User --</option>
        </select>
        <span asp-validation-for="UserID" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">@buttonLabel</button>
        <button type="button" class="btn btn-danger" onclick="window.location.href='@Url.Action("Order", "Order")'">Cancel</button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}