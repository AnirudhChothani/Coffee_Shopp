@model OrderDetailModel

@{
    string title = Model?.ProductID == null ? "Insert Product" : "Update Product";
    ViewData["Title"] = title;
    string buttonLabel = Model?.ProductID == null ? "Insert" : "Update";
}
<h2 class="mt-3 mb-3">@ViewData["Title"]</h2>

<form method="post" asp-action="SaveOrderDetail" class="row g-3">
    <input type="hidden" asp-for="OrderDetailID" />
    <div class="mb-3">
        <label for="OrderID" class="form-label">Customer Name<span class="text-danger">*</span></label>
        <select asp-for="OrderID" class="form-control" asp-items="@(new SelectList(@ViewBag.Order,"OrderID","CustomerName"))">
            <option disabled="disabled" selected>-- Select Order --</option>
        </select>
        <span asp-validation-for="OrderID" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="ProductID" class="form-label">Product Name<span class="text-danger">*</span></label>
        <select asp-for="ProductID" class="form-control" asp-items="@(new SelectList(@ViewBag.Product,"ProductID","ProductName"))">
            <option disabled="disabled" selected>-- Select Product --</option>
        </select>
        <span asp-validation-for="ProductID" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Quantity<span class="text-danger">*</span></label>
        <input type="text" asp-for="Quantity" class="form-control" placeholder="Quantity">
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Amount<span class="text-danger">*</span></label>
        <input type="text" asp-for="Amount" class="form-control" placeholder="Amount">
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Total Amount<span class="text-danger">*</span></label>
        <input type="text" asp-for="TotalAmount" class="form-control" placeholder="Total Amount">
        <span asp-validation-for="TotalAmount" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="UserID" class="form-label">User Name<span class="text-danger">*</span></label>
        <select asp-for="UserID" class="form-control" asp-items="@(new SelectList(@ViewBag.User,"UserID","UserName"))">
            <option disabled="disabled" selected>-- Select User --</option>
        </select>
        <span asp-validation-for="UserID" class="text-danger"></span>
    </div>
    <div>
        <button type="submit" class="btn btn-primary">@buttonLabel</button>
        <button type="button" class="btn btn-danger" onclick="window.location.href='@Url.Action("OrderDetail", "OrderDetail")'">Cancel</button>
    </div>
</form>